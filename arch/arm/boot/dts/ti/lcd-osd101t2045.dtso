/dts-v1/;
/plugin/;

&dsi_bridge {
	#address-cells = <1>;
	#size-cells = <0>;

	lcd: display {
		compatible = "osddisplays,osd101t2045-53ts";
		reg = <0>;

		label = "lcd";

		backlight = <&lcd_bl>;

		port {
			lcd_in: endpoint {
				remote-endpoint = <&dsi_out>;
			};
		};
	};
};

&dsi_bridge_ports {
	#address-cells = <1>;
	#size-cells = <0>;

	port@1 {
		reg = <1>;
		dsi_out: endpoint {
			remote-endpoint = <&lcd_in>;
		};
	};
};
