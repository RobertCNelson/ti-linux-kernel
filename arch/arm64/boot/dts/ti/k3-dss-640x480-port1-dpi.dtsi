&lcd1 {
	compatible = "panel-dpi";

	status = "ok";

	panel-timing {
		clock-frequency = <7000000>;
                        hactive = <640>;
                        vactive = <480>;
                        hfront-porch = <2>;
                        hback-porch = <2>;
                        hsync-len = <41>;
                        vfront-porch = <2>;
                        vback-porch = <2>;
                        vsync-len = <10>;
                        hsync-active = <0>;
                        vsync-active = <0>;
                        de-active = <1>;
                        pixelclk-active = <1>;
	};

	port {
		lcd_in1: endpoint {
			remote-endpoint = <&dpi_out1>;
		};
	};
};

&dss {
	status = "ok";
};

&dss_ports { 
	   port@1 {
		reg = <1>;

		dpi_out1: endpoint {
			remote-endpoint = <&lcd_in1>;
			data-lines = <24>;
		};
	};
};
