/dts-v1/;

#include "k3-dra82.dtsi"

/ {
	compatible =  "ti,dra82-vlab", "ti,dra822";
	model = "Texas Instruments DRA822 VLAB";

	chosen {
		stdout-path = "serial2:115200n8";
		bootargs = "earlycon=ns16550a,mmio32,0x02800000";
	};

	memory@80000000 {
		device_type = "memory";
		/* 2G RAM */
		reg = <0x00000000 0x80000000 0x00000000 0x80000000>;

	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;
		secure_ddr: secure_ddr@9e800000 {
			reg = <0 0x9e800000 0 0x01800000>; /* for OP-TEE */
			alignment = <0x1000>;
			no-map;
		};
	};
};

&mcu_uart0 {
	/* Wakeup UART is used by System firmware */
	status = "disabled";
};

/* None of the following uarts seems to be immediately functional */
&main_uart2 {
	status = "disabled";
};

&main_uart3 {
	status = "disabled";
};
&main_uart4 {
	status = "disabled";
};
&main_uart5 {
	status = "disabled";
};
&main_uart6 {
	status = "disabled";
};
&main_uart7 {
	status = "disabled";
};
&main_uart8 {
	status = "disabled";
};
&main_uart9 {
	status = "disabled";
};
